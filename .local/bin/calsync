#!/bin/bash

# customize these
WGET="/usr/bin/wget"
ICS2ORG="/home/ibrahim/.local/bin/ical2org"
ICSFILE="/home/ibrahim/dox/org/basic.ics"
ORGFILE="/home/ibrahim/dox/org/Calendar.org"
URL=`/usr/bin/pass show calendarurl`


# no customization needed below

$WGET -O $ICSFILE $URL
awk -f $ICS2ORG < $ICSFILE > $ORGFILE
